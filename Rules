#!/usr/bin/env ruby

compile '/index.html' do
  filter :erb
  layout '/toc.html'
end

compile '**/*.asciidoc' do
  filter :asciidoctor, :safe => :safe, :base_dir => 'content'
  filter :erb
  layout '/article.html'
end

compile '**/*.asciidoc' do
  filter :asciidoctor, :safe => :safe, :base_dir => 'content'
  filter :erb
  layout '/article.html'
end

compile '/search.html' do
  filter :erb
  layout '/toc.html'
end

compile '/search.json' do
  filter :erb
end

passthrough '/**/*.png'
passthrough '/**/*.gif'

route '/search.json' do
  '/search.json'
end

route '**/*' do
  if item.binary?
    item.identifier.chop + (item[:extension] ? '.' + item[:extension] : '')
  elsif item.identifier == '/index.html'
    '/index.html'
  elsif item.identifier =~ /\/404.asciidoc/
    '/404.html'
  elsif item.identifier =~ /index.asciidoc/
    File.dirname(item.identifier) + '/index.html'
  else
    item.identifier.without_ext + '/index.html'
  end
end

layout '/**/*', :erb
